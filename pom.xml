						<project.dir>${project.basedir}</project.dir>
					</systemPropertyVariables>
					<excludes>
						<!-- oh 15.04.13 test laeuft endlos -->
						<exclude>/sos/scheduler/LaunchAndObserve/*LaunchAndObserveJUnitTest.java</exclude>
						<!-- oh 15.04.13 test laeuft 5min -->
